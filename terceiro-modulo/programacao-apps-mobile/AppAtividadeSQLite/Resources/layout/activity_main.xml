<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e600">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00cc00"
        android:id="@+id/linearLayout1" >
        <EditText
            android:hint="Digite o nome do carro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNomeCarro" />
        <EditText
            android:hint="Digite a placa do veiculo(Ex: ABC1234)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPlaca" />
        <EditText
            android:inputType="datetime"
            android:hint="Última revisão(Ex: mês/dia/ano 23:00:00)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateDataRevisao" />
        <EditText
            android:hint="Digite o que foi feito na revisão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtDescRevisao" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3" >
            <Button
                android:text="incluir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnIncluir" />
            <Button
                android:text="editar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnEditar" />
            <Button
                android:text="deletar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnDeletar" />
        </LinearLayout>
        
        <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e6e600"
        android:id="@+id/linearLayout2" >
            <ListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lstDados" />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>