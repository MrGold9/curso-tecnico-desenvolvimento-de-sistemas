<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#99ddff">
    <TextView
        android:text="Você escolheu o gênero masculino"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/lblEscolhaMas" />
    <EditText
        android:inputType="numberDecimal"
        android:hint="Digite aqui seu peso em KG (Ex: 85)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPesoMas" />
    <EditText
        android:inputType="numberDecimal"
        android:hint="Digite aqui sua altura em metros (Ex: 1.70)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtAlturaMas" />
    <Button
        android:text="resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnResultadoMas" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1" >
        <TextView
            android:text="Seu IMC é: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lblImcMas" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtImcMas" />
    </LinearLayout>

</LinearLayout>
