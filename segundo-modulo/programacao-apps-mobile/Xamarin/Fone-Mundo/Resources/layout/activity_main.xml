<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearlayout">
    <TextView
        android:text="Entre com o nÃºmero"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FoneMundoTradutor" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1-855-XAMARIN"
        android:id="@+id/NumeroTelefoneText" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Traduzir"
            android:id="@+id/BotaoTradutor" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/FoneMundoTraduzido" />
        <Button
            android:text="@string/BotaoHistoricoTradutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BotaoHistoricoTradutor"
            android:enabled="false" />
    </LinearLayout>
</RelativeLayout>