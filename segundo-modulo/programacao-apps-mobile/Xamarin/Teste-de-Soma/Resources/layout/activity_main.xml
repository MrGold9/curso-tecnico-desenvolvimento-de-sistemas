<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="Qual o resultado da soma de:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnunciado" />
    <TextView
        android:text="N1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtN1" 
        android:textAlignment="center"/>
    <TextView
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSinal" 
        android:textAlignment="center"/>
    <TextView
        android:text="N2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtN2" 
        android:textAlignment="center"/>
    <TextView
        android:text="Resultado="
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtResultado" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtResultado"
         android:textAlignment="center"/>
    <Button
        android:text="Jogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnJogar" />
    <Button
        android:text="Conferir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnConferir" />
    <TextView
        android:text="ParabÃ©ns"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMensagem"
        android:textAlignment="center"/>
    <TextView
        android:text="0 Pontos"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlacar"
        android:textAlignment="center" />
</LinearLayout>